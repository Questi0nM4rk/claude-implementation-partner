# Claude Implementation Partner Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# Perplexity API for research and validation
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub Token for repository operations
# Required scopes: repo, gist
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# DOCKER SERVICES (Mem0 Backend)
# =============================================================================

# Mem0 Configuration
MEM0_PORT=8765
MEM0_QDRANT_HOST=localhost
MEM0_QDRANT_PORT=6333
MEM0_OLLAMA_HOST=http://localhost:11434
MEM0_EMBEDDING_MODEL=mxbai-embed-large

# Qdrant Vector Database
QDRANT_PORT=6333
QDRANT_STORAGE=./data/qdrant

# Ollama Configuration
OLLAMA_PORT=11434
OLLAMA_MODELS=./data/ollama

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Database Configuration (if using PostgreSQL MCP)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Project Management (Jira/Atlassian)
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_EMAIL=your.email@company.com
JIRA_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxx

# Code Quality (SonarQube)
SONAR_HOST_URL=https://sonarqube.yourcompany.com
SONAR_TOKEN=squ_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Default project path for filesystem MCP
PROJECT_PATH=${HOME}/Projects

# Debug settings
# DEBUG=true
# LOG_LEVEL=debug